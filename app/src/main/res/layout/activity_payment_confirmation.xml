<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PaymentConfirmationActivity">

    <TableLayout
        android:id="@+id/main_table"
        android:layout_width="374dp"
        android:layout_height="460dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="2dp">

        <TableRow
            android:id="@+id/idRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView

                android:id="@+id/idRowText"
                android:gravity="center_horizontal"></TextView>

            <TextView

                android:id="@+id/idRowValue"
                android:gravity="center_horizontal"></TextView>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView

                android:id="@+id/statusRowText"
                android:gravity="center_horizontal"></TextView>

            <TextView

                android:id="@+id/statusRowValue"
                android:gravity="center_horizontal"></TextView>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView

                android:id="@+id/timeRowText"
                android:gravity="center_horizontal"></TextView>

            <TextView

                android:id="@+id/timeRowValue"
                android:gravity="center_horizontal"></TextView>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView

                android:id="@+id/intentRowText"
                android:gravity="center_horizontal"></TextView>

            <TextView

                android:id="@+id/intentRowValue"
                android:gravity="center_horizontal"></TextView>
        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:text="Payment Successful"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/main_table"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="84dp" />
</android.support.constraint.ConstraintLayout>